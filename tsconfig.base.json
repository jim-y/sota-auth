{
    "compilerOptions": {
        // composite projects related
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        "target": "es2022",
        "lib": ["es2022", "esnext", "esnext.symbol", "dom"],
        "module": "commonjs",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
